<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    tools:context="com.deepanshu.quiz.MainActivity">


    <Button
        android:id="@+id/admin_btn"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/background_dark"

        android:enabled="true"
        android:text="@string/admin"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/switch_to_user"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="10dp"
        android:background="@color/cardview_dark_background"
        android:text="@string/user"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btn_createQB"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/admin_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="@string/create_question_bank" />

    <Button
        android:id="@+id/btn_editQB"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btn_createQB"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:text="@string/view_question_bank" />

    <Button
        android:id="@+id/btn_createTest"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignStart="@+id/btn_editQB"
        android:layout_below="@+id/btn_editQB"
        android:layout_marginBottom="35dp"
        android:text="@string/create_test"

        />

    <Button
        android:id="@+id/btn_viewTest"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/btn_createTest"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:text="@string/view_test" />


</RelativeLayout>
